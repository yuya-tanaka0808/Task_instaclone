<div class="link">
  <%= form_with(model: picture, local: true, url:confirm_new_or_edit) do |form| %>
    <% if picture.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>
        <ul>
          <% picture.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <table>
      <br>
      <tr>
        <th class="title"><%= form.label :"タイトル" %></th>
        <td class="title"><%= form.text_field :title %></td>
      </tr>
      <tr>
        <th class="content"><%= form.label :"内容" %></th>
        <td class="content"><%= form.text_field :content %></td>
      </tr>
      <tr>
        <th class="image"><%= form.label :"image" %></th>
        <td class="image"><%= form.file_field :image %><% form.hidden_field :image_cache %></td>
      </tr>
    </table>
    <div class="field">
      <% picture.user_id %>
    </div>
    <div class="actions">
      <%= form.submit "投稿する" %>
    </div>
  <% end %>
</div>
