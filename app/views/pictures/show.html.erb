<h1>投稿詳細</h1>
  <div class="post">
    <p id="notice"><%= notice %></p>
    <p>投稿者：<%= @picture.user.name %></p>
    <p>タイトル：<%= @picture.title %></p>
    <p>
      <strong>Image:</strong>
      <%= image_tag @picture.image.url, size: '616x985' %>
    </p>
    <p>内容: <%= @picture.content %></p>
    <p>投稿日時：<%= @picture.created_at %></p>

    <%= l(@picture.created_at, format: :short)%>
  </div>
  <div class="link">
    <% unless @picture.user_id == current_user.id %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>
    <% if current_user.id == @picture.user.id %>
      <%= link_to '編集', edit_picture_path(@picture) %>
      <%= link_to '削除', picture_path, method: :delete, data: { confirm: '本当に削除してもいいですか？' } %>
    <% end %>
    <%= link_to '一覧へ戻る', pictures_path%>
  </div>
