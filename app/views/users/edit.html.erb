<h1>ユーザー編集</h1>
<% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
<p><%= notice %></p>
<%= form_with(model: @user, local:true) do |form| %>
  <div class="user_name">
    <%= form.label :"名前" %>
    <%= form.text_field :name %>
  </div>
  <br>
  <div class="user_email">
    <%= form.label :"Email" %>
    <%= form.text_field :email %>
  </div>
  <br>
  <div class="user_password">
    <%= form.label :"password" %>
    <%= form.text_field :password %>
  </div>
  <br>
  <%= form.submit "編集する" %>
<% end %>
